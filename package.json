{
    "name": "basic-service",
    "version": "0.1.0",
    "main": "src/index.js",
    "types": "src/index.d.ts",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "prebuild": "npm run swagger",
        "build": "tsc",
        "clean": "tsc --build --clean",
        "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
        "watch": "tsc -w",
        "predev": "npm run swagger",
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
        "start": "node src/index.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --config ./jest.config.js --collectCoverage --ci --reporters=default --reporters=jest-junit --watchAll=false",
        "lint": "eslint src",
        "prepare": "is-ci || husky install",
        "swagger": "tsoa spec",
        "predoc": "npm run test:coverage && mkdir -p docs && cp coverage/coverage-summary.json docs/coverage-summary.json",
        "docs": "npx compodoc -p tsconfig.doc.json --unitTestCoverage docs/coverage-summary.json --disablePrivate -d docs"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@compodoc/compodoc": "^1.1.19",
        "@semantic-release/changelog": "^6.0.2",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/gitlab": "^10.0.2",
        "@semantic-release/npm": "^9.0.2",
        "@types/express": "^4.17.16",
        "@types/jest": "^29.4.0",
        "@types/jsonpath": "^0.2.0",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.11.18",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.32.0",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "jest": "^29.4.1",
        "nodemon": "^2.0.20",
        "semantic-release": "^20.1.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "express": "^4.18.2",
        "morgan": "^1.10.0",
        "swagger-ui-express": "^4.6.0",
        "tsoa": "^5.0.0"
    }
}
